{
  "name": "@pharos/design-system",
  "version": "1.0.0",
  "type": "module",
  "description": "Design system integrated with Figma MCP server",
  "main": "index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasbk0512/pharos-design-system.git"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "tokens:build": "npx style-dictionary build --config style-dictionary.config.js",
    "tokens:watch": "npx style-dictionary build --config style-dictionary.config.js --watch",
    "predev": "npm run tokens:build",
    "prebuild": "npm run tokens:build",
    "lint:tokens": "node scripts/lint-guards.js && node scripts/validate-tokens.js",
    "prepare": "husky install",
    "test:e2e": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "release": "semantic-release"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "chalk": "^4.1.2",
    "clsx": "^2.0.0",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.45.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^11.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "chokidar": "^3.5.3",
    "husky": "^9.0.0",
    "nodemon": "^3.0.1",
    "semantic-release": "^24.2.7",
    "style-dictionary": "^5.0.1",
    "typescript": "5.9.2"
  },
  "keywords": [
    "design-system",
    "figma",
    "mcp",
    "tokens"
  ],
  "author": "Your Name",
  "license": "MIT"
}
