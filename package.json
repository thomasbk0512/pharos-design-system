{
  "name": "pharos-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run --workspace apps/web dev",
    "test:e2e": "npm run --workspace apps/web test:e2e",
    "tokens:build": "npm run --workspace packages/pharos-design-system tokens:build",
    "lint:tokens": "node scripts/lint-guards.js",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "semantic-release": "^24.2.7"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^17.2.1"
  },
  "packageManager": "pnpm@9.0.0"
}
